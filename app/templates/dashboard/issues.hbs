<h3 class="text-center">issues</h3>

<table class="table issue-table">
  <thead>
    <tr>
      <td>
        submission time
        {{#if (eq sort 'submissionAt')}}
          <i class={{if (eq dir "asc") "fa fa-sort-asc" "fa fa-sort-desc"}}></i>
        {{/if}}
        {{action "setSort" "submissionAt"}}
      </td>
      <td>
        customer name
        {{#if (eq sort 'customerName')}}
          <i class={{if (eq dir "asc") "fa fa-sort-asc" "fa fa-sort-desc"}}></i>
        {{/if}}
      </td>
      <td>
        customer email
        {{#if (eq sort 'customerEmail')}}
          <i class={{if (eq dir "asc") "fa fa-sort-asc" "fa fa-sort-desc"}}></i>
        {{/if}}
      </td>
      <td> description </td>
      <td>
        status
        {{#if (eq sort 'status')}}
          <i class={{if (eq dir "asc") "fa fa-sort-asc" "fa fa-sort-desc"}}></i>
        {{/if}}
      </td>
      <td>
        close time
        {{#if (eq sort 'closedAt')}}
          <i class={{if (eq dir "asc") "fa fa-sort-asc" "fa fa-sort-desc"}}></i>
        {{/if}}
      </td>
      <td>
        employee name
        {{#if (eq sort 'employeeName')}}
          <i class={{if (eq dir "asc") "fa fa-sort-asc" "fa fa-sort-desc"}}></i>
        {{/if}}
      </td>
    </tr>
  </thead>
  <tbody>
    {{#each issues as |issue|}}
      <tr>
        <td>{{issue.submissionTime}}</td>
        <td>{{issue.customerName}}</td>
        <td>{{issue.customerEmail}}</td>
        <td>{{issue.description}}</td>
        <td>{{issue.status}}</td>
        <td>{{issue.closedTime}}</td>
        <td>{{issue.employeeName}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
